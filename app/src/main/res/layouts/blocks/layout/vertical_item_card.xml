<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="cardClickListener"
            type="com.example.imdbapplication.data_binding.CardClickListener" />

        <variable
            name="card"
            type="com.example.imdbapplication.data_binding.VerticalCardController" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/vrtMovieCard_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/small_card_elevation"
        app:cardUseCompatPadding="true"
        android:onClick="@{() -> cardClickListener.cardClicked(card.id)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding">

            <ImageView
                android:id="@+id/vrtMovieCard_imgPoster"
                android:layout_width="@dimen/vertical_list_card_image_width"
                android:layout_height="@dimen/vertical_list_card_image_height"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:profileImage="@{card.imgUrl}" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_toRightOf="@+id/vrtMovieCard_imgPoster">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vrtMovieCard_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{card.title}"
                        android:textSize="@dimen/medium_font_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/empty_width_divider"
                        android:showDividers="middle">

                        <TextView
                            android:id="@+id/vrtMovieCard_release"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{card.midTxt1}"
                            android:visibility="@{TextUtils.isEmpty(card.midTxt1) ? View.GONE : View.VISIBLE}" />

                        <TextView
                            android:id="@+id/vrtMovieCard_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{card.midTxt2}"
                            android:visibility="@{TextUtils.isEmpty(card.midTxt2) ? View.GONE : View.VISIBLE}" />

                        <TextView
                            android:id="@+id/vrtMovieCard_runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{card.midTxt3}"
                            android:visibility="@{TextUtils.isEmpty(card.midTxt3) ? View.GONE : View.VISIBLE}" />

                        <TextView
                            android:id="@+id/vrtMovieCard_contentRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{card.midTxt4}"
                            android:visibility="@{TextUtils.isEmpty(card.midTxt4) ? View.GONE : View.VISIBLE}" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/vrtMovieCard_imDbRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{card.bottomTxt}"
                        android:visibility="@{TextUtils.isEmpty(card.bottomTxt) ? View.GONE : View.VISIBLE}" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
