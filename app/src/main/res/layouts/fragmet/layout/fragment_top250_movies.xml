<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragments.Top250MoviesFragment">

        <RelativeLayout
            android:id="@+id/top250movies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/medium_padding">

            <RelativeLayout
                android:id="@+id/top250movies_topLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_padding"
                android:layout_marginBottom="@dimen/large_padding">

                <TextView
                    android:id="@+id/top250movies_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/title_top250movies"
                    android:textSize="@dimen/medium_font_size" />

                <include
                    android:id="@+id/top250movies_btnSeeAll"
                    layout="@layout/btn_all"
                    tools:viewBindingIgnore="true" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/large_padding"
                android:id="@+id/top250movies_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top250movies_topLayout"
                android:orientation="horizontal" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>